class Solution:
    def search(self, nums: List[int], target: int) -> int:
        if target > nums[-1] or target < nums[0]:
            return -1
        
        mid = len(nums) // 2
        
        if nums[-1] == target:
            return len(nums) - 1
        
        if nums[0] == target:
            return 0

        if nums[mid-1] == target:
            return mid-1
        
        if nums[mid-1] > target:
            returned = self.search(nums[:mid-1], target)
            if returned == -1:
                return -1
            else:
                return returned
        
        if nums[mid-1] < target:
            returned = self.search(nums[mid:], target)
            if returned == -1:
                return -1
            else:
                return returned + mid

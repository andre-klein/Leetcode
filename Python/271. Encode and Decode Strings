class Solution:

    def encode(self, strs: List[str]) -> str:
        encode_str = ""
        for cur_str in strs:
            encode_str += str(len(cur_str)) + "-" + cur_str
        return encode_str

    def decode(self, s: str) -> List[str]:
        decode_list = []
        i = 0
        
        while i < len(s):
            j = i
            
            while s[j] != "-":
                j += 1
            
            length = int(s[i:j])
            i = j + 1
            decode_list.append(s[i:i+length])
            i += length

        return decode_list

# Definition for a binary tree node.
# class TreeNode:
#     def __init__(self, val=0, left=None, right=None):
#         self.val = val
#         self.left = left
#         self.right = right
class Solution:
    def isValidBST(self, root: Optional[TreeNode]) -> bool:
        def dfs(cur, lessVal, moreVal):
            if not cur:
                return True
            if cur.val <= moreVal or cur.val >= lessVal:
                return False
            return dfs(cur.left, min(lessVal, cur.val), moreVal) and dfs(cur.right, lessVal, max(moreVal, cur.val))
        return dfs(root, float('inf'), float('-inf'))

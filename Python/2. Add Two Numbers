# Definition for singly-linked list.
# class ListNode:
#     def __init__(self, val=0, next=None):
#         self.val = val
#         self.next = next
class Solution:
    def addTwoNumbers(self, l1: Optional[ListNode], l2: Optional[ListNode]) -> Optional[ListNode]:
        start, carry = l1, 0
        while l1 and l2:
            cur = l1.val + l2.val + carry
            carry, l1.val = cur // 10, cur % 10
            last, l1, l2 = l1, l1.next, l2.next
        if l2:
            last.next = l2
            l1 = l2
        while l1:
            cur = l1.val + carry
            carry, l1.val = cur // 10, cur % 10
            last, l1 = l1, l1.next
        if carry > 0:
            last.next = ListNode(carry, None)
        return start

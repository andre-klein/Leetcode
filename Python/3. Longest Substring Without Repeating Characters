class Solution:
    def lengthOfLongestSubstring(self, s: str) -> int:
        start, maxCount, hashMap = 0, 0, {}

        for idx, char in enumerate(s):
            if char in hashMap and hashMap[char] >= start:
                start = hashMap[char] + 1
                hashMap[char] = idx
            else:
                hashMap[char] = idx
                maxCount = max(maxCount, idx - start + 1)
            
        return maxCount

********************

# Second Solution

class Solution:
    def lengthOfLongestSubstring(self, s: str) -> int:
        cur_dict, rMax, start = {}, 0, 0
        for idx, char in enumerate(s):
            if char in cur_dict and cur_dict[char] >= start:
                start = cur_dict[char] + 1
            cur_dict[char] = idx
            rMax = max(rMax, idx - start + 1)
        return rMax

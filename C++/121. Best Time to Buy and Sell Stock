class Solution {
public:
    int maxProfit(const vector<int>& prices) {
        int curMax = 0;
        int curMin = prices[0];
        for (int i = 1; i < prices.size(); ++i) {
            if (prices[i] > curMin) {
                curMax = max(curMax, prices[i]-curMin);
            } else {
                curMin = prices[i];
            }
        }
        return curMax;
    }
};

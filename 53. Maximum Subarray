# T[i] = max subarray sum up to index i
# T[0] = 0
# T[i] = T[i-1] + nums[i] if sum(T[i-1] + nums[i]) > 0, 0 otherwise

class Solution:
    def maxSubArray(self, nums: List[int]) -> int:
        if max(nums) <= 0:
            return max(nums)
        
        T = [0, 0]
        
        for i in range(len(nums)):
            if nums[i] + T[0] > 0:
                T[0] += nums[i]
                T[1] = max(T)
            else:
                T[0] = 0

        return T[1]

# Time complexity is O(n)
# Space complexity is O(1)
